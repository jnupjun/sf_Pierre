{% extends 'base.html.twig' %}

{% block title %}
	Se connecter
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Se Connecter</h1>
		<form action="{{ path('app.login')}}" class="card w-50 mx-auto" method='POST'>
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<div class="mb-2">
				<label for="email" class="form-label">Email</label>
				{# input names always have an underscore before#}
				<input type="email" class="form-control" name="_username" id="email" placeholder="john@exemple.com" required>
			</div>
			<div class="mb-2">
				<label for="password" class="form-label">Mot de passe</label>
				<input type="password" name="_password" id="password" class="form-control" placeholder="S3CR3T" required>
			</div>
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			<button type="submit" class="btn btn-primary">Se Connecter</button>
		</form>

	</section>
{% endblock %}
