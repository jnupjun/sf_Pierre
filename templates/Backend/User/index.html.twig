{% extends 'base.html.twig' %}

{% block title %}
	Admin des users
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des usager</h1>
		<a href="{{ path('app.register') }}" class="btn btn-primary">Cr√©er un usager</a>
		<div class="row mt-2 gy-4">
			{% for user in users %}
				<div class="col-md-4">
					<div class="card">
						<h4>
							{# search for the getter we set in the twig#}
							{{ user.FullName }}
						</h4>
						<p>
							Email:
							{{ user.email }}
						</p>
						<p>
							Roles:
							{# try add #}
							{{ user.roles|join(', ')|replace({'ROLE_':''})|title }}
						</p>
						<div class="card-btn">
							<a href="" class="btn btn-warning">Modifier</a>
							<a href="" class="btn btn-danger">Supprimer</a>
						</div>
					</div>

				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
