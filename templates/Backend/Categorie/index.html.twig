{% extends 'base.html.twig' %}

{% block title %}
	Administration des catégories
{% endblock %}

{% block body %}
	<section class="container mt-2">
		<h1 class="text-center">Administration des catégories</h1>
		<table class="mt-4">
			<thead>
				<tr>
					<th>ID</th>
					<th>Nom</th>
					<th>Actif</th>
					<th>Date de création</th>
					<th>Dernière modification</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for categorie in categories %}
					<tr>
						{# entity.champ = search for its getter #}
						<td>{{ categorie.id }}</td>
						<td>{{ categorie.name }}</td>
						<td>{{ categorie.enable ? 'Actif' : 'Inactif' }}</td>
						<td>{{ categorie.createdAt|date('Y/m-d H-i:s') }}</td>
						<td>{{ categorie.updateAt|date('Y:m/d H:i/s') }}</td>
						<td>
							<div
								class="cell-flex">
								{# <a href="http://localhost:8000/admin/categories/{{categorie.id}}/update">Modifier</a> #}
								<a href="{{ path('admin.categories.update', {id: categorie.id}) }}" class="btn btn-warning">Modifier</a>
								{% include 'Backend/Categorie/_form.html.twig' %}
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</section>
{% endblock %}
